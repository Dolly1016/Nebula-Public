      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NebulaInstaller"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="620"
      Title="SelectVanillaPageAgain">
    
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ><Run Text="指定されたAmong UsにはModが導入されています。"/><LineBreak/><Run Text="Modが導入されていないAmong Usの実行ファイルを選択してください"/><Run Language="ja-jp" Text="。"/></TextBlock>
        <Button Content="再選択" Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Click="ClickNext"/>
        <Button Content="キャンセル" Margin="0,0,110,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80"  Click="ClickPrev"/>

    </Grid>
</Page>
