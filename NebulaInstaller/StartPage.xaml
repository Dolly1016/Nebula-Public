<Page x:Class="NebulaInstaller.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NebulaInstaller"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="620"
      Title="StartPage">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ><Run Text="Nebula on the Shipの"/><Run Text="インストールを開始します。"/><LineBreak/><Run/><LineBreak/><Run Text="Nebula on the Ship は Among Us に様々な要素を追加するModです。"/><LineBreak/><Run Text="導入に際して"/><Run Language="ja-jp" Text="、このPCに"/><Run Text="Among Us"/><Run Language="ja-jp" Text="が既にインストールされている"/><Run Text="必要があります。"/></TextBlock>
        <Button Content="開始" Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Click="ClickNext"/>
        <Button Content="終了" Margin="0,0,110,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80"  Click="ClickExit"/>

    </Grid>
</Page>
