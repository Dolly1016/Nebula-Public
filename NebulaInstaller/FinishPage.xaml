<Page x:Class="NebulaInstaller.FinishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NebulaInstaller"
      mc:Ignorable="d" 
      d:DesignHeight="320" d:DesignWidth="620"
      Title="FinishPage">

    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" ><Run Text="インストールが完了しました。"/><LineBreak/><Run Text="[起動]で Nebula on the Ship が導入された Among Us を起動します。"/><LineBreak/><Run/><LineBreak/><Run Language="ja-jp" Text="※ "/><Run Text="初回の起動には30秒から1分ほど時間がかかります。"/><Run Language="ja-jp" Text="ダイアログが閉じてから"/><Run Text="しばらくお待ちください。"/></TextBlock>
        <Button Content="起動" Margin="0,0,20,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80" Click="ClickBoot"/>
        <Button Content="終了" Margin="0,0,110,20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="80"  Click="ClickExit"/>

    </Grid>
</Page>
